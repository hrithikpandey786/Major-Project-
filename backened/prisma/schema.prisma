generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Department{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  course Course[]
}

model Course{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  deptId String @db.ObjectId
  department Department @relation(fields: [deptId], references: [id])
  name String
}
























































































